{
  "manifest_version": 2,
  "name": "Nairaland Plus",
  "version": "1.0",
  "description": "An alternative UI/UX for nairaland.com.",
  "content_scripts": [
    {
      "matches": ["https://www.nairaland.com/?*", "https://www.nairaland.com/"],
      "js": ["webcomponents-bundle.js","main.js", "utils.js", "components.js", "pages/index.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.nairaland.com/news*"],
      "js": ["webcomponents-bundle.js","main.js", "utils.js", "components.js", "pages/news.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.nairaland.com/*"],
      "js": ["webcomponents-bundle.js","main.js", "utils.js", "components.js", "pages/default.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}